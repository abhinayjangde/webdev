{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "src"
    ]
}
// Scripts for package.json file
{
    "scripts": {
        "build": "tsc -p .",
        "start": "node dist/index.js",
        "dev": "tsc-watch --onSuccess \"pnpm run start\""
    }
}